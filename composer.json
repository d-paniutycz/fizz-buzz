{
    "name": "d-paniutycz/fizz-buzz",
    "description": "SOLID implementation of FizzBuzz game in PHP with PHPUnit tests.",
    "license": "MIT",
    "authors": [
        {
            "name": "Damian Paniutycz",
            "email": "damian.paniutycz@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "DP\\FizzBuzz\\" : "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload -o"
        ],
        "tests": "phpunit tests --testdox --do-not-cache-result"
    }
}
